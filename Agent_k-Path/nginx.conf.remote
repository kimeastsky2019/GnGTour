events {
    worker_connections 1024;
}

http {
    client_max_body_size 100M;
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    include /etc/nginx/mime.types;
    default_type application/octet-stream;
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/xml+rss application/json;

    upstream energy_analysis { server 127.0.0.1:8000; }

    server {
        listen 443 ssl http2;
        server_name damcp.gngmeta.com;

        ssl_certificate /etc/letsencrypt/live/damcp.gngmeta.com/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/damcp.gngmeta.com/privkey.pem;
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384:ECDHE-RSA-AES256-SHA256;
        ssl_prefer_server_ciphers off;
        ssl_session_cache shared:SSL:10m;
        ssl_session_timeout 10m;
        ssl_session_tickets off;
        ssl_stapling on;
        ssl_stapling_verify on;
        ssl_trusted_certificate /etc/letsencrypt/live/damcp.gngmeta.com/chain.pem;

        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
        add_header X-Frame-Options DENY always;
        add_header X-Content-Type-Options nosniff always;
        add_header X-XSS-Protection "1; mode=block" always;
        add_header Referrer-Policy "strict-origin-when-cross-origin" always;
        add_header Content-Security-Policy "default-src self; script-src self unsafe-inline unsafe-eval https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://cdn.plot.ly; style-src self unsafe-inline https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; img-src self data: https:; font-src self https://cdnjs.cloudflare.com;" always;

        # /audit static (Vite build with base=/audit)
        location = /audit { return 301 /audit/; }
        location ^~ /audit/assets/ {
            alias /home/metal/energy-audit/dist/assets/;
            access_log off;
            add_header Cache-Control "public, max-age=31536000, immutable";
        }
        location ^~ /audit/ {
            alias /home/metal/energy-audit/dist/;
            try_files $uri $uri/ /audit/index.html;
        }

        # existing EU site assets
        location ^~ /assets/ {
            alias /var/www/eu/assets/;
            access_log off;
            add_header Cache-Control "public, max-age=31536000, immutable";
        }

        location /api {
            proxy_pass http://127.0.0.1:8000;
            proxy_set_header Host $host;
            client_max_body_size 100M;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        location = /hydrogen { return 301 /hydrogen/; }
        location ^~ /hydrogen/assets/ { alias /var/www/hydrogen/assets/; access_log off; add_header Cache-Control "public, max-age=31536000, immutable"; }
        location ^~ /hydrogen/ { alias /var/www/hydrogen/; try_files $uri $uri/ /hydrogen/index.html; }

        location = /p2p { return 301 /p2p/; }
        location ^~ /p2p/assets/ { alias /var/www/p2p/assets/; access_log off; add_header Cache-Control "public, max-age=31536000, immutable"; }
        location ^~ /p2p/ { alias /var/www/p2p/; try_files $uri $uri/ /p2p/index.html; }

        location = /nanogrid { return 301 /nanogrid/; }
        location ^~ /nanogrid/ {
            root /var/www;
            try_files $uri $uri/ /nanogrid/index.html;
            add_header Cache-Control "public, max-age=3600";
        }

        location ^~ /node_modules {
            proxy_pass http://127.0.0.1:3000;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_buffering off;
            proxy_read_timeout 300s;
        }

        # default EU static site
        location / {
            alias /var/www/eu/;
            try_files $uri $uri/ /index.html;
            add_header Cache-Control "public, max-age=3600";
        }

        location /ontology/ {
            proxy_pass http://127.0.0.1:8003/;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
        }

        location /ontology/static/ {
            alias /home/metal/ontology_static/;
            expires 1y;
            add_header Cache-Control "public, immutable";
        }

        location /health { proxy_pass http://energy_analysis/health; access_log off; }

        location ~* \\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            proxy_pass http://energy_analysis;
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }

    server {
        listen 80;
        server_name damcp.gngmeta.com;
        location /.well-known/acme-challenge/ { root /var/www/html; }
        return 301 https://$server_name$request_uri;
    }

    # GnG marketing site (also default catch-all)
    server {
        listen 80 default_server;
        server_name gngmeta.com www.gngmeta.com _;

        root /var/www/gngmeta;
        index index.html;

        location /.well-known/acme-challenge/ {
            root /var/www/html;
        }

        location /api/ {
            proxy_pass http://127.0.0.1:5174/api/;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        location / {
            try_files $uri $uri/ /index.html;
        }
    }

    # agent.gngtour.com -> K-PATH static (Next export)
    server {
        listen 80;
        server_name agent.gngtour.com;

        root /home/metal/gngtour/dist;
        index index.html;

        location / {
            try_files $uri $uri/ /index.html;
        }
    }

    # GnG Tour redirect to agent.gngtour.com
    server {
        listen 443 ssl;
        server_name www.gngtour.com gngtour.com;

        ssl_certificate /etc/letsencrypt/live/gngtour.com/fullchain.pem; # managed by Certbot
        ssl_certificate_key /etc/letsencrypt/live/gngtour.com/privkey.pem; # managed by Certbot
        include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
        ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

        return 301 http://agent.gngtour.com$request_uri;
    }

    server {
        listen 80;
        server_name www.gngtour.com gngtour.com;

        return 301 http://agent.gngtour.com$request_uri;
    }

}
